extends ../layout

block content
    h1.
        Welcome To Awesomeness
    ul
        if user
            div= "Howdy, " + user.name
            li(role="presentation")
                a(href="/blog") Dashboard
            li(role="presentation")
                a(href="/auth/logout") Logout
        else
            li(role="presentation")
                a(href="/user/register") Register

            button
                a(href='/auth/login') Login
